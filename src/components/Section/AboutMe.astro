---
import { Image } from "astro:assets";
import profil from "../../assets/images/profil.png";
import { useTranslations } from "../../i18n/utils";

const t = useTranslations(Astro.url.pathname);
---

<section class="py-12 bg-gray-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-6">{t("aboutme.title")}</h2>
    <div class="flex flex-col md:flex-row items-center justify-center gap-4">
      <Image
        class="rounded-full shadow-md"
        src={profil}
        alt="Tristan Teufel"
        height={100}
        width={100}
      />
      <div class="md:w-1/2 md:pl-2">
        <p class="text-gray-700 text-center md:text-left">
          {t("aboutme.text")}
          <a
            href="https://cv.teufel-it.de"
            target="_blank"
            class="text-blue-500 hover:underline"
            rel="noopener noreferrer">CV</a
          >.
        </p>
      </div>
    </div>
  </div>
</section>
