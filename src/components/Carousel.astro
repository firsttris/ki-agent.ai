---
import { Icon } from "astro-icon/components";

const devIcons = [
  "devicon:slack",
  "devicon:google-wordmark",
  "devicon:github",
  "devicon:docker",
  "devicon:salesforce",
  "devicon:postgresql-wordmark",
  "devicon:bitbucket-wordmark",
  "devicon:jira-wordmark",
  "devicon:confluence-wordmark",
  "devicon:trello-wordmark",
  "devicon:facebook",
  "devicon:mongodb-wordmark",
  "devicon:gitlab-wordmark",
  "devicon:digitalocean-wordmark",
  "devicon:heroku",
  "devicon:redis",
  "devicon:mysql",
  "devicon:oracle",
  "devicon:azure",
  "devicon:react",
  "devicon:nodejs",
  "devicon:python",
  "devicon:java",
  "devicon:typescript",
  "devicon:linux",
  "devicon:php",
  "devicon:dot-net",
  "devicon:jenkins",
  "devicon:firebase",
  "logos:sap",
  "logos:google-gmail",
  "logos:google-drive",
  "logos:google-calendar",
  "logos:google-cloud",
  "logos:google-maps",
];

const allIcons = devIcons.concat(devIcons).concat(devIcons).concat(devIcons);
---

<div class="w-3/4 mx-auto overflow-hidden bg-white shadow-lg rounded-lg p-5">
  <div class="marquee-inner marquee-top flex space-x-8 mb-4">
    {
      allIcons.map((icon) => (
        <div class="icon-container">
          <Icon name={icon} class="text-6xl" />
        </div>
      ))
    }
  </div>
  <div class="marquee-inner marquee-bottom flex space-x-8 pt-4">
    {
      allIcons.reverse().map((icon) => (
        <div class="icon-container">
          <Icon name={icon} class="text-6xl" />
        </div>
      ))
    }
  </div>
</div>

<style>
  .marquee-inner {
    white-space: nowrap;
  }
  .marquee-top {
    animation: scroll-left 60s linear infinite;
  }
  .marquee-bottom {
    animation: scroll-right 60s linear infinite;
    flex-direction: row-reverse; 
  }
  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  @keyframes scroll-right {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(100%);
    }
  }
  .icon-container {
    transition: transform 0.3s ease;
  }
  .icon-container:hover {
    transform: scale(1.3);
  }
</style>
